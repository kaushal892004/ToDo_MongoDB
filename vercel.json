{
  "version": 2,
  "builds": [
    {
      "src": "app.py",  // Replace this with your main app file
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/app.py"  // Make sure this points to your Flask app entry file
    }
  ],
  "env": {
    "MONGO_URI": "@mongo_uri" // Environment variable for MongoDB URI (should be set in Vercel dashboard)
  }
}
